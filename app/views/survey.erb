<div class="container">

  <h1><%= @survey.name %></h1>

  <form name="survey" action="/surveys/<%= @survey.id%>" method="post">
    <%@survey.questions.each do |question|  %>
    <h3><%=  question.content %></h3>
      <% question.choices.each do |choice| %>
        <input type="radio" name="<%= question.id %>" value="<%= choice.id %>">  <%= choice.content %><br>
      <% end %>
    <% end %>
    <input type="submit" value="Submit">
  </form>

</div>