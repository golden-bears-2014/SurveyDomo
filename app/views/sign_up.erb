<div class="container">
  <h1>Sign Up</h1>

  <form id="sign-up" method="post" action="/users">

    <label class="label" for="name">Name: </label>
    <input type="text" name="user[name]" placeholder="rubylover" >
    <br>


    <label class="label" for="email">Email: </label>
    <input type="text" name="user[email]" placeholder="rubylover" >
    <br>
<!-- #CR use password for field name on form and password_hash for field name in database -->
    <label class="label" for="password">Password: </label>
    <input type="password" name="user[password]" placeholder="6 or more characters">
    <br>

    <div class="submit"><input type="submit" value="Sign Up"></div>
  </form>

</div>
