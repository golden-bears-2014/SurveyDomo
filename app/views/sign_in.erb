<div class="container">
  <h1>Sign In</h1>

  <% if @error %>
    <div class="errors"><%= @error %></div>
  <% end %>

  <form id="sign-in" method="post" action="/sessions">
    <label class="label" for="username">Username</label>
    <input type="text" name="user[username]" placeholder="e.g., me@example.com"><br>
    <label class="label" for="password">Password</label>
    <input type="password" name="user[password_hash]" placeholder="6 or more characters">
    <br>
    <div class="submit"><input type="submit" value="Sign In"></div>
  </form>

</div>
